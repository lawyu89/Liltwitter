<% if current_user %>

  <div class="container">
    <h1>Welcome <%= current_user.username %>!</h1>
    <form action="/users/<%=current_user.id%>/tweets" method="post">
      <input type="text" placeholder="your tweet here" name="tweet">

      <input type="submit" value="Tweet!">
    </form>
  </div>
  <div class="body">
    <div class="tweets">
      <h1>Your Tweets</h1>
      <% @current_user.tweets.each do |tweet| %>
      <p><%= tweet.message %></p>
      <% end %>
    </div>
    <div class="user-links">
      <p><a href="#">MY MINIONS</a></p>
      <p><a href="#">MY LEADERS</a></p>
      <p><a href="/users/<%= @current_user.id %>/profiles">SEE ALL USERS</a></p>
    </div>
  </div>
<% end %>


