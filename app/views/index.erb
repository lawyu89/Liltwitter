<% if current_user %>

  <div class="container">
    <h1>Welcome <%= current_user.username %>!</h1>
    <form action="/users/<%=current_user.id%>/tweets" method="post">
      <input id="tweet-text" type="text" placeholder="your tweet here" name="tweet">

      <input id="tweet-button" type="submit" value="Tweet!">
    </form>
  </div>
  <div class="body">
    <div class="tweets-container">
      <h1>Your Tweets</h1>
      <div class="tweets">
        <% @current_user.tweets.each do |tweet| %>
        <p><%= tweet.message %></p>
        <% end %>
      </div>
    </div>
    <div class="user-links-container">
      <h1><a href="/users/<%= current_user.id %>/minions">MY MINIONS</a></h1>
      <h1><a href="/users/<%= current_user.id %>/leaders">MY LEADERS</a></h1>
      <h1><a href="/users/<%= current_user.id %>/profiles">SEE ALL USERS</a></h1>
    </div>
  </div>

  <div class="footer">
  </div>
<% end %>
